        $phoneRow.insertAdjacentHTML("beforebegin", 
            `
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-7">
                    <input name="orders[${$form.childNodes.length - 14}][product]" type="text" class="form-control">
                </div>

                <label class="col-sm-1 col-form-label" style="max-width: fit-content;">Quantity</label>
                <div class="col-sm-1">
                    <input name="orders[${$form.childNodes.length - 14}][quantity]" data-id="0" class="form-control" type="number" />
                </div>

                <div class="col-sm-1">
                    <button class="btn" class="remove-row" type="button"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            `
        );
    });

