<h2>Create new order</h2>

<form action="/order/new" style="margin: 0 19%;" method="POST" id="order-form">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Customer's name</label>
        <div class="col-sm-10">
            <input name="name" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Orders</label>
        <div class="col-sm-7">
            <input name="orders[0][product]" type="text" class="form-control" placeholder="Product name">
        </div>

        <label class="col-sm-1 col-form-label" style="max-width: fit-content;">Quantity</label>
        <div class="col-sm-1">
            <input name="orders[0][quantity]" data-id="0" class="form-control" type="number" />
        </div>

        <div class="col-sm-1">
            <button class="btn" id="add-row" type="button"><i class="fas fa-plus"></i></button>
        </div>

    </div>

    <div class="form-group row" id="phone-row">
        <label class="col-sm-2 col-form-label">Phone number</label>
        <div class="col-sm-10">
            <input name="phone" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <input name="address" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Postal code</label>
        <div class="col-sm-10">
            <input name="postal" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Expected delivery date</label>
        <div class="col-sm-10">
            <input name="expectedDelivery" type="date" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create order</button>
        </div>
    </div>

</form>

<!-- script for adding new item row -->

