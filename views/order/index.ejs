<div class="row">
    <div class="col-sm-1"></div>

    <div class="col-sm-8">
        <div class="order-index-headers" style="text-align: left;">
            <h2>Orders</h2>
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Address</th>
                    <th scope="col">Deliver by</th>
                    <th scope="col">Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(x => { %>
                    <tr>
                        <th scope="row"><%= orders.indexOf(x) + 1 %></th>
                        <td><%= x.customer.name %> </td>
                        
                        <td>
                            <% x.orders.forEach(y => { %>
                            <p><%= y.product %></p>
                            <% }) %>
                        </td>
                        
                        <td>
                            <% x.orders.forEach(y => { %>
                            <p><%= y.quantity %></p>
                            <% }) %>
                        </td>
                        
                        <td><%= x.customer.address %> </td>
                        <td><%= x.shortenDate() %> </td>
                        <td><%= x.status %> </td>
                        <td>
                            <form action="/order/index/<%= x._id %>" method="GET">
                                <button class="btn btn-warning">View/edit</button>
                            </form>
                        </td>
                    </tr>
                    
                <% }) %>
            </tbody>
        </table>

        <form action="/order/new" method="GET" style="display: flex; justify-content: center;">
            <button class="btn btn-warning" id="new-order-button"><i class="fas fa-plus""></i></button>
        </form>

    </div>
    <div class="col-sm-3">
        <div class="order-index-headers" style="text-align: left;">
            <h2>Statistics</h2>
        </div>

        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Deliveries today: </h5>
                <h1 class="card-text"><%= deliveriesToday.length %> </h1>
            </div>
        </div>
        
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Orders today: </h5>
                <h1 class="card-text"><%= ordersToday.length %> </h1>
            </div>
        </div>
        
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Total unfulfilled: </h5>
                <h1 class="card-text"><%= unfulfilled.length %> </h1>
            </div>
        </div>
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Most popular product: </h5>
                <h1 class="card-text"><%= mostPopular[0]._id %> </h1>
            </div>
        </div>
    </div>
</div>


