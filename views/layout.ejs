<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link rel="icon" type="image/png" href="/images/logo-dark.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/images/logo-dark.png" sizes="32x32">

    <script src="/js/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9.15.2/dist/sweetalert2.all.min.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDWbUXUoEjBIfvNji_8-Ea9DNwAW4hv5tc&callback=initMap" type="text/javascript"></script>
    <title>Haste</title>
</head>

<body>
    <div class="main-container">

    <!-- login flash messages -->
    <% if (alerts.success) {alerts.success.forEach(msg => { %>
    <div class="alert alert-success"><%= msg %> </div>
    <% });}; %>

    <% if (alerts.error) {alerts.error.forEach(msg => { %>
    <div class="alert alert-danger"><%= msg %> </div>
    <% });}; %>

    <% if (alerts.autherror) {alerts.autherror.forEach(msg => { %>
    <div class="alert alert-danger">Your <%= msg.params %> has <%= msg.msg %></div>
    <% });}; %>


    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/order/index"> <img src="/images/logo.png" style="height: 2rem" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/order/index">Orders</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/delivery/index">Deliveries</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Users
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/user/index">View all users</a>
                        <a class="dropdown-item" href="/auth/register">Add new user</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/customer/index">Customers (WIP)</a>
                </li>

            </ul>

            <% if (currentUser) { %>
                <a href="/auth/logout" class="nav-item" id="login-logout">Logout</a>
                <div id="navbar-profile">
                    <i class="fa fa-user"></i><br>
                </div>
            <% } %>

            

        </div>
    </nav>

    <%- body %>

    </div>

    <!-- footer -->    

    <footer class="fixed-bottom bg-dark text-right" >
        <p class="h6 pr-4 py-3 my-auto text-warning">
            <a class="badge badge-warning text-dark" href="https://github.com/russellcxl/project-2-sei23" target="_blank">repo <i class="fab fa-github"></i></a>&nbsp;&nbsp;
            <a class="badge badge-warning text-dark" href="https://github.com/russellcxl/" target="_blank">russellcxl <i class="fas fa-user-astronaut"></i></a>
        </p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js"></script>
    <script src="/js/custom.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    
</body>

</html>